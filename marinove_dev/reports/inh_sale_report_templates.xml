<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_marinove" inherit_id="sale.report_saleorder_document">
    <!-->
        <xpath expr="//field[@name='doc.partner_invoice_id']" position="replace">
        </xpath>
    -->    
        <xpath expr="//thead" position="replace">
            <thead>
                <tr>
                    <th name="th_reference" class="text-left"><span>Référence</span></th>
                    <th name="th_description" class="text-left"><span>Description</span></th>
                    <th name="th_quantity" class="text-right"><span>Quantité</span></th>
                    <th name="th_unity" class="text-right"><span>Unité</span></th>
                    <th name="th_weight" class="text-right"><span>Poids</span></th>
                    <th name="th_packaging" class="text-left"><span>Nb Colis</span></th>

                    <th name="th_livre_nb" class="text-left"><span>Livré Pièce</span></th>
                    <th name="th_livre_kg" class="text-left"><span>Livré Kg</span></th>
                    <th name="th_livre_colis" class="text-left"><span>Livré Colis</span></th>
                    <th name="th_origine" class="text-left"><span>Origine</span></th>
                </tr>
            </thead>           
        </xpath>
            
            
        <xpath expr="//tbody" position="replace">
            <tbody class="sale_tbody">
                <t t-set="total_weight" t-value="0"/>
                <t t-set="total_qty" t-value="0"/>
                <t t-set="current_subtotal" t-value="0"/>
                
                <t t-foreach="doc.order_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <!--<tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">-->
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section'  else ''">
                            <t t-if="not line.display_type"  name="order_line_accountable">
                                <td name="td_reference"><span t-field="line.product_id.default_code"/></td>
                                <td name="td_name"><span t-field="line.name"/></td>

                                <td name="td_quantity" class="text-right">
                                    <span t-field="line.di_quantite_maxi" />
                                    <t t-set="total_qty" t-value="total_qty + line.di_quantite_maxi" />
                                    <t t-if="line.di_unite_categorie_name  == 'Poids'">
                                    </t>
                                </td>

                                <td name="td_unity" class="text-right">
                                    <span t-field="line.product_uom"/>
                                </td>    
                                <td name="td_poids" class="text-right">
                                    <span t-field="line.di_poids_kg"/>
                                     <t t-set="total_weight" t-value="total_weight + line.di_poids_kg" />
                                </td>
                                 
                                <td name="td_colis" class="text-right" >
                                    <span t-field="line.di_nb_colis"/>
                                </td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </t>
                            
                            <t t-if="line.display_type == 'line_section'">
                                <td></td>
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"  t-options="{'widget': 'text'}" />
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            
                            <t t-if="line.display_type == 'line_note'">
                                <td></td>
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"  t-options="{'widget': 'text'}"/>
                                </td>
                            </t>

                        </tr>
                </t>
            </tbody>
        </xpath>
        
        <xpath expr="//div[@name='total']" position="replace">
            <div id="total" class="row" name="total">
                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                    <table class="table table-sm">
                        <tr class="border-black o_subtotal" style="">
                            <td name="td_qte_total_label" > <strong class="mr16">Total Quantité</strong></td>
                            <td name="td_qte_total" class="text-right">
                                <span t-esc="total_qty" />
                            </td>
                        </tr>
                        <tr class="border-black o_subtotal" style="">
                            <td name="td_pds_total_label"> <strong class="mr16">Total Poids</strong></td>
                            <td name="td_pds_total" class="text-right">
                                <span t-esc="total_weight" />
                            </td>
                        </tr> 
                    </table>       
                </div>
            </div>
    
        </xpath>

    </template>


<template id="report_saleorder_marinove">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="report_saleorder_document_marinove" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="report_saleorder_pro_forma_marinove">
    <t t-call="web.html_container">
        <t t-set="is_pro_forma" t-value="True"/>
        <t t-foreach="docs" t-as="doc">
            <t t-call="report_saleorder_document_marinove" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
