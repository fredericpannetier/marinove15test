<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_bon_transport_marinove" >
             <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                    
                        <t t-set="address">
                            <span><strong>DESTINATAIRE :</strong></span>
                            <div t-field="o.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                            <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
                        </t>
                        <t t-set="information_block">
                            <strong>TRANSPORTEUR :</strong>
                            <div t-field="o.carrier_id.name"/>
                            <div t-field="o.carrier_id.di_street"/>
                            <div t-if="o.carrier_id.di_street2" t-field="o.carrier_id.di_street2"/>
                            
                            <div>
                            <span t-field="o.carrier_id.di_zip"/>
                            <span>    </span>
                            <span t-field="o.carrier_id.di_city"/>
                            </div>
                            
                            <div>
                            <span t-if="o.carrier_id.di_phone">Tél : </span>
                            <span t-field="o.carrier_id.di_phone"/>
                            <span  t-if="o.carrier_id.di_mobile">  Mobile : </span>
                            <span t-field="o.carrier_id.di_mobile"/>
                            </div>
                            
                        </t>
                        
                        <div class="page">
                            <!-->
                            <div class="row">
                            
                            
                                <div class="col-6" name="div_outgoing_address">
                                    <div t-if="o.move_ids_without_package and o.move_ids_without_package[0].partner_id and o.move_ids_without_package[0].partner_id.id != o.partner_id.id">
                                        <span><strong>Delivery Address:</strong></span>
                                        <div t-field="o.move_ids_without_package[0].partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                    <div t-if="o.picking_type_id.code != 'internal' and (not o.move_ids_without_package or not o.move_ids_without_package[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                                        <span><strong>Warehouse Address:</strong></span>
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                </div>
                                <div class="col-5 offset-1" name="div_incoming_address">
                                    <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                                        <span><strong>Vendor Address:</strong></span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                                        <span><strong>Warehouse Address:</strong></span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                                        <span><strong>DESTINATAIRE :</strong></span>
                                    </div>
                                    <div t-if="o.partner_id" name="partner_header">
                                        <div t-field="o.partner_id"
                                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                        <p t-if="o.sudo().partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.sudo().partner_id.vat"/></p>
                                    </div>
                                </div>
                            </div>
                            -->
                            
                            
                            <br/>
                            <h1 t-field="o.name" class="mt0 float-left"/>
                            <div class="row mt48 mb32">
                                <div t-if="o.origin" class="col-auto" name="div_origin">
                                    <strong>No Commande:</strong>
                                    <p t-field="o.origin"/>
                                </div>
                                <div class="col-auto" name="div_state">
                                    <strong>Etat:</strong>
                                    <p t-field="o.state"/>
                                </div>
                                <div class="col-auto" name="div_sched_date">
                                    <!-->
                                    <strong>Date Prévue:</strong>
                                    <p t-field="o.scheduled_date" t-options='{"widget": "date" ,"format": "EEEE dd/MM/yyyy"}'  />
                                    -->
                                    <strong>Date de départ:</strong>
                                    <p t-field="o.x_studio_deadline" t-options='{"widget": "date" ,"format": "EEEE dd/MM/yyyy"}'  />
                                    
                                </div>
                                
                            </div>
                            <table class="table table-sm" t-if="o.move_line_ids and o.move_ids_without_package">
                                <t t-set="has_barcode" t-value="any(move_line.product_id and move_line.product_id.sudo().barcode or move_line.package_id for move_line in o.move_line_ids)"/>
                                <t t-set="has_serial_number" t-value="any(move_line.lot_id or move_line.lot_name for move_line in o.move_line_ids)" groups="stock.group_production_lot"/>
                                <t t-set="total_qty" t-value="0"/>
                                <t t-set="total_pds" t-value="0"/>
                                <t t-set="total_colis" t-value="0"/>
                                <t t-set="total_pal" t-value="0"/>
                                
                                <thead>
                                    <tr>
                                        <th name="th_type">
                                            <strong>Type</strong>
                                        </th>
                                        <th name="th_taille">
                                            <strong>Taille</strong>
                                        </th>
                                        <th name="th_product">
                                            <strong>Produit</strong>
                                        </th>
                                        <th name="th_vide" class="text-center">
                                            <strong>Quantité</strong>
                                        </th>
                                        <th name="th_qte" class="text-center">
                                            <strong>Quantité</strong>
                                        </th>
                                        <th name="th_poids" class="text-center" >
                                           <strong>Poids</strong>
                                        </th>
                                        <th name="th_colis" class="text-center" >
                                           <strong>Nb Colis</strong>
                                        </th>
                                        <th name="th_palette" class="text-center">
                                            <strong>Nb Palettes</strong>
                                        </th>
                                        <th name="th_from" t-if="o.picking_type_id.code != 'incoming'" align="left" groups="stock.group_stock_multi_locations">
                                            <strong>De</strong>
                                        </th>
                                        <th name="th_to" t-if="o.picking_type_id.code != 'outgoing'" groups="stock.group_stock_multi_locations">
                                            <strong>Vers</strong>
                                        </th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.move_ids_without_package" t-as="move">
                                        <!-- In case you come across duplicated lines, ask NIM or LAP -->
                                        <t t-foreach="move.move_line_ids.sorted(key=lambda ml: ml.location_id.id)" t-as="ml">
                                            <tr>
                                                <td>
                                                    <span t-field="ml.product_id.di_variete_id"/><br/>
                                                </td>   
                                                <td>
                                                    <span t-field="ml.product_id.di_taille_id"/><br/>
                                                </td>   
                                                <td>
                                                    <t t-if="ml.product_id.default_code != 'T'">
                                                        <span t-field="ml.product_id.display_name"/><br/>
                                                        <span t-field="ml.product_id.description_picking"/>
                                                    </t>
                                                    <t t-if="ml.product_id.default_code == 'T'">
                                                        <span t-field="ml.di_desc_cde"/>
                                                    </t>
                                                </td>
                                                
                                                <td name="quantity" class="text-right">
                                                    <!--
                                                    <span t-if="o.state != 'done'" t-field="ml.product_uom_qty"/>
                                                    <span t-if="o.state == 'done'" t-field="ml.qty_done"/>
                                                    
                                                    <span t-field="ml.product_uom_id" groups="uom.group_uom"/>
                                                    -->
                                                    <t t-if="ml.product_id.default_code != 'T'">
                                                        <t t-if="ml.di_nb_bete != 0">
                                                            <span t-if="o.state != 'done'" t-field="ml.di_nb_bete"/>
                                                            <span t-if="o.state != 'done'" t-field="ml.product_uom_id"/>
                                                        </t>
                                                        <t t-if="ml.di_nb_bete_done != 0">
                                                            <span t-if="o.state == 'done'" t-field="ml.di_nb_bete_done"/>
                                                            <span t-if="o.state == 'done'" t-field="ml.product_uom_id"/>
                                                        </t>
                                                    </t>
                                                </td>

                                                <td>
                                                    
                                                </td>

                                                <td class="text-right">
                                                    <t t-if="ml.di_poids_kg != 0">
                                                        <span t-if="o.state != 'done'" t-field="ml.di_poids_kg" t-options='{"widget": "float", "precision": 3}' />
                                                    </t>    
                                                    
                                                    <t t-if="ml.di_poids_kg_done != 0">
                                                        <span t-if="o.state == 'done'"  t-field="ml.di_poids_kg_done" t-options='{"widget": "float", "precision": 3}' />
                                                    </t>
                                                </td> 
                                                                                              
                                                <td class="text-right">
                                                    <t t-if="ml.di_nb_colis != 0">
                                                        <span t-field="ml.di_nb_colis" t-options='{"widget": "float", "precision": 0}' />
                                                    </t>    
                                                </td>
                                                <td class="text-right">
                                                    <t t-if="ml.di_nb_palette != 0">
                                                        <span t-field="ml.di_nb_palette" t-options='{"widget": "float", "precision": 0}' />
                                                    </t>
                                                </td>
                                                
                                                <t t-if="ml.product_id.default_code != 'T'">
                                                    <t t-if="o.state != 'done'">
                                                        <t t-set="total_qty" t-value="total_qty + ml.di_nb_bete" />
                                                        <t t-set="total_pds" t-value="total_pds + ml.di_poids_kg" />
                                                    </t>
                                                    <t t-if="o.state == 'done'">
                                                        <t t-set="total_qty" t-value="total_qty + ml.di_nb_bete_done" />
                                                        <t t-set="total_pds" t-value="total_pds + ml.di_poids_kg_done" />
                                                    </t>
                                                </t>
                                                
                                                <t t-set="total_colis" t-value="total_colis + ml.di_nb_colis" />
                                                <t t-set="total_pal" t-value="total_pal + ml.di_nb_palette" />
                       
                                                <td t-if="o.picking_type_id.code != 'incoming'" groups="stock.group_stock_multi_locations">
                                                    <!--<span t-esc="ml.location_id.display_name"/>-->
                                                    <span t-esc="ml.location_id.name"/>
                                                        <t t-if="ml.package_id">
                                                            <span t-field="ml.package_id"/>
                                                        </t>
                                                </td>
                                                <td t-if="o.picking_type_id.code != 'outgoing'" groups="stock.group_stock_multi_locations">
                                                    <div>
                                                        <span t-field="ml.location_dest_id"/>
                                                        <t t-if="ml.result_package_id">
                                                            <span t-field="ml.result_package_id"/>
                                                        </t>
                                                    </div>
                                                </td>
                                                
                                                
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                                 
                                <tr>  
                                <td></td>
                                <td></td>
                               
                                
                                <td><strong class="mr16">Total</strong></td>
                                
                                 
                                <td class="text-right">
                                    <t t-if="total_qty != 0">
                                        <span t-esc="total_qty"/>
                                    </t>
                                </td>  
                                <td></td>
                                
                                <td class="text-right">
                                    <t t-if="total_pds != 0">
                                        <span t-esc="total_pds" t-options='{"widget": "float", "precision": 3}' />
                                    </t>
                                </td>                                               
                                <td class="text-right">
                                    <t t-if="total_colis != 0">
                                        <span t-esc="total_colis" t-options='{"widget": "float", "precision": 0}' />
                                    </t>
                                </td>
                                <td class="text-right">
                                    <t t-if="total_pal != 0">
                                        <span t-esc="total_pal" t-options='{"widget": "float", "precision": 0}' />
                                    </t>
                                </td>
                                <td></td>  
                                </tr>
                                
                            </table>
                            
                            <div  name="obs_contact">
                                <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th name="th_observations" class="text-left">OBSERVATIONS</th>
                                        <th name="th_contact" class="text-left">CONTACT</th>  
                                    </tr> 
                                </thead>  
                                <tbody>  
                                    <tr>
                                        <td class="text-left">
                                            <!-- <div style="font-size:6px; height:100px; width: 50%; vertical-align:top; horizontal-align:left; display: inline-table;"> </div>-->
                                            <span t-field="o.note"/>
                                        </td>
                                        <td><div style="font-size:2px; height:100px; width: 50%; vertical-align:middle;"> </div></td>    
                                    </tr>
                                    



                                </tbody>         
                                </table>
                            </div>
 
                            <p>
                               BON DE TRANSPORT
                            </p>
                            <div  name="visa" >
                                <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th name="th_condition" colspan="2" class="text-center">CONDITIONS GENERALES DE TRANSPORT : ACCORD AVEC LE TRANSPORTEUR</th>
                                    </tr> 
                                    <tr>
                                        <th name="th_visa_exp" class="text-center">VISA DE L'EXPEDITEUR</th>
                                        <th name="th_visa_trans" class="text-center">VISA DU TRANSPORTEUR / HEURE ET DATE DE REMISE</th>  
                                    </tr> 
                                </thead>  
                                <tbody>  
                                    <tr>
                                       <td><div style="font-size:2px; height:100px; width: 50%; vertical-align:middle;"> </div></td> 
                                       <td><div style="font-size:2px; height:100px; width: 50%; vertical-align:middle;"> </div> </td> 
                                    </tr>
                                    
                                </tbody>         
                                </table>
                            </div>
                            
                            
                            
                            <p>
                               MARCHANDISES RECUES EN BON ETAT LE :
                            </p>
                            <p>
                               CACHET ET SIGNATURE
                            </p>

                            
                        </div>
                    </t>
                </t>
            </t>   
    
        </template>


        

    </data>
</odoo>
