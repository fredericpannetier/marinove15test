<odoo>

    
   <record id="di_view_picking_tree" model="ir.ui.view">
        <field name="name">di.view.picking.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="after">
                
                <field name="di_nb_colis"  optional="hide" />
                <field name="di_nb_palette"  optional="hide" />

                <field name="di_poids_kg"  optional="hide" />
                <field name="di_poids_kg_done"  optional="hide" />
                <field name="di_nb_bete"  optional="hide" />
                <field name="di_nb_bete_done"  optional="hide" />

            </xpath>
        </field>
    </record>
 
